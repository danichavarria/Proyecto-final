<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.mariadb.jbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/libreria</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456789</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.formt_sql">true</property>
        <property name="current_session_context_class">thread</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="org.danieska.entity.User"/>

    </session-factory>
</hibernate-configuration>